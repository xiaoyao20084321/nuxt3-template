    "@pinia/nuxt": "^0.11.0",
    "@unocss/reset": "^66.1.2",
    "@vueuse/core": "^13.3.0",
    "@vueuse/nuxt": "^13.3.0",
    "chroma-js": "^3.1.2",
    "dayjs-nuxt": "^2.1.11",
    "eruda": "^3.4.1",
    "nuxt": "^3.17.5",
    "nuxt-svgo": "^4.2.2",
    "nuxt-typed-router": "^4.0.1",
    "pinia-plugin-persistedstate": "^4.3.0",
    "prettier": "^3.5.3",
