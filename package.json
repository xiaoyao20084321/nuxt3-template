  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@unocss/eslint-config": "^66.1.2",
    "@unocss/eslint-plugin": "^66.1.2",
    "@unocss/nuxt": "^66.1.2",
    "eslint": "^9.29.0",
    "lint-staged": "^16.0.0",
    "nuxt-lodash": "^2.5.3",
    "sass": "^1.89.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "unocss": "^66.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
